@{
    ViewData["Title"] = "Time table Filter";
    Layout = "~/Areas/Registrar/Views/Shared/_Layout.cshtml";
}

<h1>Filter Timetable</h1>

<h4>Time Table</h4>
<hr />

<form asp-action="PrintTimetable" method="post">
    <div class="row">
        <div class="col-lg-3">
            <label class="control-label">Class</label>
            <select name="ClassId" id="ClassId2" class="form-control" asp-items="ViewBag.Classes"><option value="-1">Select</option></select>
        </div>
        <div class="col-lg-3">
            <label class="control-label">Section</label>
            <select name="SectionId" id="SectionId" class="form-control"></select>
        </div>
        <div class="col-lg-3">
            <label class="control-label">Teacher</label>
            <select name="TeacherId" class="form-control">@Html.Raw(ViewBag.Teachers)</select>
        </div>
        <div class="col-lg-3">
            <label class="control-label">Report Type</label>
            <select name="ReportType" class="form-control">
                <option value="STANDARD" selected="selected">STANDARD</option>
                <option value="CUSTOM">CUSTOM</option>
                <option value="TEACHER">TEACHER'S</option>
            </select>
        </div>
    </div>

    <div class="row">
        <div class="col-lg-12">&nbsp;</div>
    </div>

    <div class="row">
        <div class="col-lg-12">
            <input type="submit" value="View Time Table" id="btn_submit" class="btn btn-md btn-outline-danger" />
            <a asp-action="Index" class="btn btn-md btn-outline-dark">Back to List</a><br/>
        </div>
    </div>
</form>