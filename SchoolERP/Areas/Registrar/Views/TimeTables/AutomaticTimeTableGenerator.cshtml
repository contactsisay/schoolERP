@model BALibrary.Registrar.TimeTable

@{
    ViewData["Title"] = "Automatic Time Table Generator";
    Layout = "~/Areas/Registrar/Views/Shared/_Layout.cshtml";
}

<h1>Create</h1>

<h4>Automatic Time Table Generator</h4>
<hr />

<form asp-action="AutomaticTimeTableGenerator">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <div class="row">
        <div class="col-lg-3">
            <label class="control-label">ROSTER NAME</label>
            <select name="AcademicYearId" id="ClassId2" class="form-control" asp-items="ViewBag.AcademicYears"><option value="-1">Select</option></select>
        </div>
        <div class="col-lg-3">
            <label asp-for="AcademicYearSectionId" class="control-label"></label>
            <select asp-for="AcademicYearSectionId" id="SectionId" class="form-control"><option value="-1">Select</option></select>
        </div>
        @*<div class="col-lg-3">
            <label class="control-label">Time for One Period (Minutes)</label>
            <select name="SinglePeriodTime" class="form-control" asp-items="@ViewBag.SinglePeriodTimes"></select>
        </div>*@
        <div class="col-lg-3" style="text-align:center;">
            <label class="control-label">Overwrite Previous</label><br />
            <input type="checkbox" name="OverwritePrevious" class="form-control" />
        </div>
    </div>
    
    <!-- SPACER -->
    <div class="row">
        <div class="col-lg-12">&nbsp;</div>
    </div>

    <div class="row">
        <div class="col-lg-12">
            <input type="submit" value="Generate Time Table" id="btn_submit" class="btn btn-lg btn-outline btn-danger" />
            <a asp-action="Index" class="btn btn-lg btn-outline-dark">Back to List</a>
        </div>
    </div>
        
    <!-- SPACER -->
    <div class="row">
        <div class="col-lg-12">&nbsp;</div>
    </div>
</form>