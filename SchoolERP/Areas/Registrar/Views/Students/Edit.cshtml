@model BALibrary.Registrar.Student
@inject SchoolERP.Data.ApplicationDbContext _context;
@{
    ViewData["Title"] = "Edit";
    Layout = "~/Areas/Registrar/Views/Shared/_Layout.cshtml";

    var guardians = _context.StudentGuardians.Where(a=>a.StudentId == Model.Id).ToList();
}

<h1>Edit</h1>

<h4>Student</h4>
<hr />
<div class="row">
    <div class="col-md-12">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />

            <div class="row">
                <div class="col-lg-3" style="border-right:2px solid darkred;">
                    <div class="form-group" style="text-align:center;">
                        <a href="#">
                            <img src="~/images/no-image.png" width="200px" height="150px" />
                            <input type="file" name="file" class="form-control" />
                        </a>
                    </div>
                    <div class="form-group">
                        <label class="control-label">ACCOUNT INFORMATION</label>
                        <input type="email" name="EmailAddress" placeholder="Email Address" required="required" class="form-control" />
                    </div>
                    <div class="form-group">
                        <input type="password" name="Password" required="required" class="form-control" placeholder="Password" />
                    </div>
                    <div class="form-group">
                        <input type="password" name="ConfirmPassword" class="form-control" placeholder="Confirm Password" />
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Create" class="btn btn-sm btn-outline-dark" />
                        <a asp-action="Index" class="btn btn-sm btn-outline-primary">Back to List</a>
                    </div>
                </div>
                <div class="col-lg-9" style="border-left:2px solid darkred;">

                    <div class="row">
                        <div class="col-lg-3">
                            <label asp-for="IDNo" class="control-label"></label>
                            <input asp-for="IDNo" class="form-control" />
                            <span asp-validation-for="IDNo" class="text-danger"></span>
                        </div>
                        <div class="col-lg-3">
                            <label asp-for="FirstName" class="control-label"></label>
                            <input asp-for="FirstName" class="form-control" />
                            <span asp-validation-for="FirstName" class="text-danger"></span>
                        </div>
                        <div class="col-lg-3">
                            <label asp-for="MiddleName" class="control-label"></label>
                            <input asp-for="MiddleName" class="form-control" />
                            <span asp-validation-for="MiddleName" class="text-danger"></span>
                        </div>
                        <div class="col-lg-3">
                            <label asp-for="LastName" class="control-label"></label>
                            <input asp-for="LastName" class="form-control" />
                            <span asp-validation-for="LastName" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-lg-12">&nbsp;</div>
                    </div>

                    <div class="row">
                        <div class="col-lg-3">
                            <label asp-for="Gender" class="control-label"></label>
                            <input asp-for="Gender" class="form-control" />
                            <span asp-validation-for="Gender" class="text-danger"></span>
                        </div>
                        <div class="col-lg-3">
                            <label asp-for="Dob" class="control-label"></label>
                            <input asp-for="Dob" class="form-control" />
                            <span asp-validation-for="Dob" class="text-danger"></span>
                        </div>
                        <div class="col-lg-3">
                            <label asp-for="MobileNo" class="control-label"></label>
                            <input asp-for="MobileNo" class="form-control" />
                            <span asp-validation-for="MobileNo" class="text-danger"></span>
                        </div>
                        <div class="col-lg-3">
                            <label asp-for="AdmissionDate" class="control-label"></label>
                            <input asp-for="AdmissionDate" class="form-control" />
                            <span asp-validation-for="AdmissionDate" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-lg-12">&nbsp;</div>
                    </div>

                    <div class="row">
                        <div class="col-lg-3">
                            <label asp-for="BloogGroup" class="control-label"></label>
                            <input asp-for="BloogGroup" class="form-control" />
                            <span asp-validation-for="BloogGroup" class="text-danger"></span>
                        </div>
                        <div class="col-lg-3">
                            <label asp-for="Height" class="control-label"></label>
                            <input asp-for="Height" class="form-control" />
                            <span asp-validation-for="Height" class="text-danger"></span>
                        </div>
                        <div class="col-lg-3">
                            <label asp-for="Weight" class="control-label"></label>
                            <input asp-for="Weight" class="form-control" />
                            <span asp-validation-for="Weight" class="text-danger"></span>
                        </div>
                        <div class="col-lg-3">
                            <label asp-for="Religion" class="control-label"></label>
                            <input asp-for="Religion" class="form-control" />
                            <span asp-validation-for="Religion" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-lg-12">&nbsp;</div>
                    </div>

                    <div class="row">
                        <div class="col-lg-3">
                            <label asp-for="RoleId" class="control-label"></label>
                            <select asp-for="RoleId" class="form-control" asp-items="ViewBag.RoleId"></select>
                        </div>
                        <div class="col-lg-3">
                            <label class="control-label">Grade</label>
                            <select name="ClassId" id="ClassId" class="form-control" asp-items="ViewBag.ClassId"></select>
                        </div>
                        <div class="col-lg-3">
                            <label class="control-label">Section</label>
                            <select name="SectionId" id="SectionId" class="form-control"></select>
                        </div>
                        <div class="col-lg-9">&nbsp;</div>
                    </div>

                    <div class="row">
                        <div class="col-lg-12">&nbsp;</div>
                    </div>

                    <div class="row">
                        <div class="col-lg-12">
                            <div class="card card-outline card-primary">
                                <div class="card-header">
                                    <h3 class="card-title">GUARDIANS AND PARENTS</h3>
                                    <div class="card-tools">
                                        <button type="button" class="btn btn-tool" data-card-widget="collapse">
                                            <i class="fas fa-minus"></i>
                                        </button>
                                    </div>
                                    <!-- /.card-tools -->
                                </div>
                                <!-- /.card-header -->
                                <div class="card-body">
                                    <input type="hidden" id="relationships" value="@ViewBag.Relationships" />
                                    <input type="hidden" id="rowCount" value="@guardians.Count" />
                                    <table id="employee-table" style="width:100%;">
                                        <tr>
                                            <th><input type="checkbox" name="chkAll" checked="checked" /></th>
                                            <th style="width:20%">Relationship</th>
                                            <th style="width:20%">Full Name</th>
                                            <th style="width:20%">Mobile No</th>
                                            <th style="width:20%">Email Address</th>
                                            <th style="width:20%">Action</th>
                                        </tr>
                                        @foreach(var g in guardians)
                                        {
                                            <tr>
                                                <td><input type="checkbox" name="chk_@g.Id" checked="checked" /></td>
                                                <td>@Html.Raw(g.RelationshipId)</td>
                                                <td>@Html.Raw(g.FullName)</td>
                                                <td>@Html.Raw(g.MobileNo)</td>
                                                <td>@Html.Raw(g.EmailAddress)</td>
                                                <td>&nbsp;</td>
                                            </tr>
                                        }
                                    </table>
                                </div>
                                <!-- /.card-body -->
                            </div>
                        </div>
                    </div>
                </div>
            </div>

        </form>
    </div>
</div>
                                                
<script type="text/javascript">

    function deleteRow(id) {
        var table = document.getElementById('employee-table');
        var rowCount = table.rows.length;
        document.getElementById("rowCount").value = rowCount - 1;
        var ele = document.getElementById(id);

        if (rowCount <= 1) {
            alert("There is no row available to delete!");
            return;
        }

        if (ele) {
            ele.parentNode.parentNode.remove();
        } else {
            table.deleteRow(rowCount - 1);
        }

    }

</script>