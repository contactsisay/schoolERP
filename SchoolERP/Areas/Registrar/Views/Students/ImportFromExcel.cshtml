@{
    ViewData["Title"] = "Import From Excel";
    Layout = "~/Areas/Registrar/Views/Shared/_Layout.cshtml";

    var importedStudents = ViewBag.ImportedStudents;
}

<h1>@ViewBag.Title</h1>

<h4>Student</h4>
<hr />
<div class="row">
    <div class="col-md-12">
        <form asp-action="ImportFromExcel" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="row">
                <div class="col-lg-3" style="border-right:2px solid darkred;">
                    <div class="form-group">
                        <label class="control-label">Grade</label>
                        <select name="ClassId" id="ClassId" class="form-control" asp-items="ViewBag.ClassId"></select>
                    </div>
                    <div class="form-group">
                        <label class="control-label">Section</label>
                        <select name="SectionId" id="SectionId" class="form-control"></select>
                    </div>
                    <div class="form-group">
                        <label class="control-label">UPLOAD FILE</label>
                        <input type="file" name="file" class="form-control" />
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Import Students" class="btn btn-md btn-outline-danger" />
                        <a asp-action="Index" class="btn btn-md btn-outline-dark">Back to List</a>
                    </div>
                </div>
                <div class="col-lg-9" style="border-left:2px solid darkred;">
                    @if (importedStudents != null) {
                        <div class="row">
                            <div class="col-lg-12">
                                <div class="card card-outline card-primary">
                                    <div class="card-header">
                                        <h3 class="card-title">STUDENTS IMPORTED</h3>
                                        <div class="card-tools">
                                            <button type="button" class="btn btn-tool" data-card-widget="collapse">
                                                <i class="fas fa-minus"></i>
                                            </button>
                                        </div>
                                        <!-- /.card-tools -->
                                    </div>
                                    <!-- /.card-header -->
                                    <div class="card-body">
                                        <table id="employee-table" style="width:100%;">
                                            @*<tr>
                                                <th style="width:5%">#</th>
                                                <th style="width:10%">ID No</th>
                                                <th style="width:20%">Full Name</th>
                                                <th style="width:20%">Mobile No</th>
                                                <th style="width:20%">Email Address</th>
                                                <th style="width:10%">Grade</th>
                                                <th style="width:10%">Section</th>
                                                <th style="width:5%">Action</th>
                                            </tr>*@
                                            
                                            <tr>
                                                <td colspan="8">
                                                    <h3>Total of: <b>@Html.Raw(importedStudents.Count)</b> Students Imported!</h3>
                                                </td>
                                            </tr>
                                        </table>
                                    </div>
                                    <!-- /.card-body -->
                                </div>
                            </div>
                        </div>
                    }                    
                </div>
            </div>

        </form>
    </div>
</div>