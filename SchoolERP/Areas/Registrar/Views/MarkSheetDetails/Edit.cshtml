@model BALibrary.Registrar.MarkSheetDetail

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Areas/Registrar/Views/Shared/_Layout.cshtml";
}

<h1>Edit</h1>

<h4>MarkSheetDetail</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="MarkSheetId" class="control-label"></label>
                <select asp-for="MarkSheetId" class="form-control" asp-items="ViewBag.MarkSheetId"></select>
                <span asp-validation-for="MarkSheetId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ExamGroupDetailId" class="control-label"></label>
                <input asp-for="ExamGroupDetailId" class="form-control" />
                <span asp-validation-for="ExamGroupDetailId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ExamMark" class="control-label"></label>
                <input asp-for="ExamMark" class="form-control" />
                <span asp-validation-for="ExamMark" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="IsPassed" /> @Html.DisplayNameFor(model => model.IsPassed)
                </label>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

