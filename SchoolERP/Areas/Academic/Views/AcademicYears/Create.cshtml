@model BALibrary.Academic.AcademicYear

@{
    ViewData["Title"] = "Create";
    Layout = "~/Areas/Academic/Views/Shared/_Layout.cshtml";
}

<h1>Create</h1>

<h4>Academic Year</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="SessionId" class="control-label"></label>
                <select asp-for="SessionId" class="form-control select2 select2-danger select2-hidden-accessible" asp-items="ViewBag.SessionId"><option value="-1">Select</option></select>
            </div>
            <div class="form-group">
                <label asp-for="ClassId" class="control-label"></label>
                <select asp-for="ClassId" class="form-control select2 select2-danger select2-hidden-accessible" asp-items="ViewBag.ClassId"><option value="-1">Select</option></select>
            </div>
            <div class="form-group">
                <label asp-for="SemesterId" class="control-label"></label>
                <select asp-for="SemesterId" class="form-control" asp-items="ViewBag.SemesterId"></select>
            </div>
            <div class="form-group">
                <label asp-for="SubjectGroupId" class="control-label"></label>
                <select asp-for="SubjectGroupId" class="form-control select2 select2-danger select2-hidden-accessible" asp-items="ViewBag.SubjectGroupId"></select>
            </div>
            <div class="form-group">
                <label asp-for="ExamGroupId" class="control-label"></label>
                <select asp-for="ExamGroupId" class="form-control select2 select2-danger select2-hidden-accessible" asp-items="ViewBag.ExamGroupId"></select>
            </div>
            <div class="form-group">
                <label asp-for="StudentId" class="control-label"></label>
                <select asp-for="StudentId" class="form-control select2 select2-danger select2-hidden-accessible" asp-items="ViewBag.StudentId"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-sm btn-flat btn-outline-danger" />
                <a asp-action="Index" class="btn btn-sm btn-flat btn-outline-dark">Back to List</a>
            </div>
        </form>
    </div>
</div>

