@{
    ViewData["Title"] = "Purchase Report";
    Layout = "~/Areas/Report/Views/Shared/_Layout.cshtml";
}

<section class="content">
    <div class="container-fluid">

        <div class="row">
            <div class="col-lg-12">&nbsp;</div>
        </div>

        <!-- title row -->
        <div class="row">
            <div class="col-12">
                <form asp-action="PreviewReport" method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <!-- info row -->
                    <div class="row">
                        <div class="col-2">
                            <label>Sales Person</label>
                            <select asp-items="@ViewBag.EmployeeId" name="EmployeeId" class="form-control"></select>
                        </div>
                        <div class="col-2">
                            <label>From Date</label>
                            <input type="date" name="FromDate" id="FromDate" class="form-control" />
                        </div>
                        <div class="col-2">
                            <label>To Date</label>
                            <input type="date" name="ToDate" id="ToDate" class="form-control" />
                        </div>
                        <div class="col-2">
                            <label>&nbsp;</label><br />
                            <input type="submit" value="Search" class="btn btn-md btn-dark" />
                        </div>
                        <div class="col-6">&nbsp;</div>
                    </div>
                    <!-- /.row -->
                </form>
            </div>
            <!-- /.col -->
        </div>

    </div><!-- /.container-fluid -->
</section>
<!-- /.content -->