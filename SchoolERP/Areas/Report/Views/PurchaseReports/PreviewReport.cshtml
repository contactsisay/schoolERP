@using BALibrary.Inventory;
@using BALibrary.Sales;
@using BALibrary.Purchase;
@inject SchoolERP.Data.ApplicationDbContext _context;
@{
    ViewData["Title"] = "Purchase Report";
    Layout = "~/Areas/Report/Views/Shared/_Layout.cshtml";

    var queryResult = ViewBag.queryResult;
    int counter = 0;
    decimal subtotal = 0;
    decimal overallTax = 0;
    decimal grandTotal = 0;
}

<section class="content">
    <div class="container-fluid">

        <div class="row">
            <div class="col-lg-12">&nbsp;</div>
        </div>

        <div class="row">
            <div class="col-12">
                <div class="callout callout-info">
                    <h5><i class="fas fa-info"></i> Note:</h5>
                    Select sales person and other filters to get what you need to see
                </div>

                <!-- Main content -->
                <div class="">
                    <!-- title row -->
                    <div class="row">
                        <div class="col-12">
                            <h4>
                                <i class="fas fa-globe"></i> MyPharmacy
                                <small class="float-right">Date: <b>@Html.Raw(DateTime.Now)</b></small>
                            </h4>
                        </div>
                        <!-- /.col -->
                    </div>

                    <!-- Table row -->
                    <div class="row">
                        <div class="col-12 table-responsive">
                            <table class="table table-striped">
                                <thead>
                                    <tr>
                                        <th>PRODUCT #</th>
                                        <th>SUPPLIER INVOICE #</th>
                                        <th>PRODUCT NAME</th>
                                        <th>PRODUCT BATCH NO</th>
                                        <th>PRODUCT TYPE</th>
                                        <th>PRICE (ETB)</th>
                                        <th>QUANTITY</th>
                                        <th>TOTAL BEFORE TAX</th>
                                        <th>TAX (15%)</th>
                                        <th>ROW TOTAL</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var idd in queryResult)
                                    {
                                        subtotal += idd.PurchaseRowTotal;
                                        overallTax += idd.PurchaseTAX;
                                        grandTotal += idd.purchaseRowTotalTAX;
                                        <tr>
                                            <td>@Html.Raw(++counter)</td>
                                            <td>@Html.Raw(idd.SupplierInvoiceNo)</td>
                                            <td>@Html.Raw(idd.ProductName)</td>
                                            <td>@Html.Raw(idd.ProductBatchNo)</td>
                                            <td>@Html.Raw(idd.ProductTypeName)</td>
                                            <td>@Html.Raw(idd.ItemPurchasingPrice)</td>
                                            <td>@Html.Raw(idd.ItemQuantity)</td>
                                            <td>@Html.Raw(idd.PurchaseRowTotal)</td>
                                            <td>@Html.Raw(idd.PurchaseTAX)</td>
                                            <td>@Html.Raw(idd.purchaseRowTotalTAX)</td>
                                        </tr>
                                    }

                                </tbody>
                            </table>
                        </div>
                        <!-- /.col -->
                    </div>
                    <!-- /.row -->

                    <div class="row">
                        <!-- accepted payments column -->
                        <div class="col-6">
                            <p class="lead">Fully Paid</p>
                            <label>CASH</label>
                            @*<p class="text-muted well well-sm shadow-none" style="margin-top: 10px;">
                            Etsy doostang zoodles disqus groupon greplin oooj voxy zoodles, weebly ning heekya handango imeem
                            plugg
                            dopplr jibjab, movity jajah plickers sifteo edmodo ifttt zimbra.
                            </p>*@
                        </div>
                        <!-- /.col -->
                        <div class="col-6">
                            <p class="lead">Amount Due @Html.Raw(DateTime.Now)</p>

                            <div class="table-responsive">
                                <table class="table">
                                    <tr>
                                        <th style="width:50%">SUBTOTAL:</th>
                                        <td>@Html.Raw(Convert.ToDecimal(grandTotal) + " ETB")</td>
                                    </tr>
                                    <tr>
                                        <th>TAX (15%)</th>
                                        <td>0.0</td>
                                    </tr>
                                    <tr>
                                        <th>GRAND TOTAL:</th>
                                        <td>@Html.Raw(Convert.ToDecimal(grandTotal) + " ETB")</td>
                                    </tr>
                                </table>
                            </div>
                        </div>
                        <!-- /.col -->
                    </div>
                    <!-- /.row -->
                    <!-- this row will not appear when printing -->
                    <div class="row no-print">
                        <div class="col-12">
                            <a href="#" onclick="onPrint()" class="btn btn-sm btn-outline-dark"><i class="fas fa-print"></i> Print Report</a>

                            <a asp-action="Index" class="btn btn-sm btn-outline-dark float-right" style="margin-right: 5px;">
                                <i class="fas fa-list"></i> Back to Filter
                            </a>
                        </div>
                    </div>
                </div>
                <!-- /.invoice -->
            </div><!-- /.col -->
        </div><!-- /.row -->
    </div><!-- /.container-fluid -->
</section>
<!-- /.content -->


<script>

    function onPrint() {
        window.addEventListener("load", window.print());
    }
</script>