@model IEnumerable<BALibrary.Examination.ExamGroup>
@inject SchoolERP.Data.ApplicationDbContext _context;
@{
    ViewData["Title"] = "Exam Groups";
    Layout = "~/Areas/Examination/Views/Shared/_Layout.cshtml";
    int counter = 0;
}

<h4>@ViewData["Title"]</h4>

<p>
    <a asp-action="Create" class="btn btn-sm btn-flat btn-outline-dark">Create New Exam Group</a>
</p>

<table id="datatable" class="table table-bordered table-hover">
    <thead>
        <tr>
            <th>#</th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MaximumMark)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PassingMark)
            </th>
            <th>
                @Html.Raw("Exams Count")
            </th>
            <th>
                @Html.Raw("NEXT_ACTION")
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            counter = counter + 1;

            <tr>
                <td>
                    @Html.Raw(counter)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.MaximumMark)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PassingMark)
                </td>
                <td>
                    @Html.Raw("<span class='badge badge-danger'>"+_context.ExamGroupDetails.Where(s=>s.ExamGroupId == item.Id).ToList().Count + " Exams</span>")
                </td>
                <td>
                    <a asp-action="Details" asp-route-id="@item.Id"><i class="fa fa-list"></i></a> |
                    <a asp-action="Edit" asp-route-id="@item.Id"><i class="fa fa-edit"></i></a> |
                    <a asp-action="Delete" asp-route-id="@item.Id"><i class="fa fa-trash"></i></a>
                </td>
            </tr>
        }
    </tbody>
    <tfoot>
        <tr>
            <th>#</th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MaximumMark)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PassingMark)
            </th>
            <th>
                @Html.Raw("Exams Count")
            </th>
            <th>
                @Html.Raw("NEXT_ACTION")
            </th>
        </tr>
    </tfoot>
</table>
