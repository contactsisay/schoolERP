@model BALibrary.Purchase.Models.PurchaseOrderViewModel

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Areas/Purchase/Views/Shared/_Layout.cshtml";
}

<h1>Edit</h1>

<h4>Purchase Order</h4>

<hr />
<form asp-action="EditPR">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="row">
        <div class="col-md-8">
            <span>Product Batch Details</span>
            <div class="row">
                <div class="col-lg-4">
                    <label asp-for="@Model.ProductBatch.ProductId" class="control-label"></label>
                    <select asp-for="@Model.ProductBatch.ProductId" class="form-control" asp-items="ViewBag.ProductId"></select>
                    <span asp-validation-for="@Model.ProductBatch.ProductId" class="text-danger"></span>
                </div>
                <div class="col-lg-4">
                    <label class="control-label">Batch No</label>
                    <input asp-for="@Model.ProductBatch.BatchNo" class="form-control" />
                    <span asp-validation-for="@Model.ProductBatch.BatchNo" class="text-danger"></span>
                </div>
                <div class="col-lg-4">
                    <label class="control-label">Manufactured Date</label>
                    <input asp-for="@Model.ProductBatch.ManufacturedDate" class="form-control" />
                    <span asp-validation-for="@Model.ProductBatch.ManufacturedDate" class="text-danger"></span>
                </div>
            </div>
            
            <div class="row">
                <div class="col-lg-12">&nbsp;</div>
            </div>
            
            <div class="row">
                <div class="col-lg-4">
                    <label class="control-label">Best Before</label>
                    <input asp-for="@Model.ProductBatch.BestBefore" class="form-control" />
                    <span asp-validation-for="@Model.ProductBatch.BestBefore" class="text-danger"></span>
                </div>
                <div class="col-lg-4">
                    <label class="control-label">Expr. Date</label>
                    <input asp-for="@Model.ProductBatch.ExpirationDate" class="form-control" />
                    <span asp-validation-for="@Model.ProductBatch.ExpirationDate" class="text-danger"></span>
                </div>
                <div class="col-lg-4">
                    <label class="control-label">Purchasing Price</label>
                    <input asp-for="@Model.ProductBatch.PurchasingPrice" class="form-control" />
                    <span asp-validation-for="@Model.ProductBatch.PurchasingPrice" class="text-danger"></span>
                </div>
            </div>
            
            <div class="row">
                <div class="col-lg-4">&nbsp;</div>
            </div>
            
            <div class="row">
                <div class="col-lg-4">
                    <label class="control-label">Selling Price</label>
                    <input asp-for="@Model.ProductBatch.SellingPrice" class="form-control" />
                    <span asp-validation-for="@Model.ProductBatch.SellingPrice" class="text-danger"></span>
                </div>
                <div class="col-lg-4">
                    <label class="control-label">Is Sellable?</label>
                    <input asp-for="@Model.ProductBatch.IsSellable" class="form-control" />
                    <span asp-validation-for="@Model.ProductBatch.IsSellable" class="text-danger"></span>
                </div>
                <div class="col-lg-4">&nbsp;</div>
            </div>
        </div>
        <div class="col-md-4">
            <span>Purchase Order Details</span>
            <div class="row">
                <div class="col-lg-4">
                    <label asp-for="@Model.PurchaseOrder.SupplierId" class="control-label"></label>
                    <select asp-for="@Model.PurchaseOrder.SupplierId" class="form-control" asp-items="ViewBag.SupplierId"></select>
                    <span asp-validation-for="@Model.PurchaseOrder.SupplierId" class="text-danger"></span>
                </div>
                <div class="col-lg-4">
                    <label asp-for="@Model.PurchaseOrder.RequiredAmount" class="control-label"></label>
                    <input asp-for="@Model.PurchaseOrder.RequiredAmount" class="form-control" />
                    <span asp-validation-for="@Model.PurchaseOrder.RequiredAmount" class="text-danger"></span>
                </div>
                <div class="col-lg-4">
                    <label asp-for="@Model.PurchaseOrder.ApprovedAmount" class="control-label"></label>
                    <input asp-for="@Model.PurchaseOrder.ApprovedAmount" class="form-control" />
                    <span asp-validation-for="@Model.PurchaseOrder.RequiredAmount" class="text-danger"></span>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-lg-12">&nbsp;</div>
    </div>

    <div class="row">
        <div class="col-lg-3">
            <p>&nbsp;</p>
            <input type="submit" value="Create" class="btn btn-primary" />
            <a asp-action="Index" class="btn btn-sm btn-outline-dark">Back to List</a>
        </div>
        <div class="col-lg-9">&nbsp;</div>
    </div>

</form>
