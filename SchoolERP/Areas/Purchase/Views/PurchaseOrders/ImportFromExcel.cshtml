@model BALibrary.Purchase.Models.PurchaseOrderViewModel

@{
    ViewData["Title"] = "Import From Excel";
    Layout = "~/Areas/Purchase/Views/Shared/_Layout.cshtml";
}

<h1>Create</h1>

<h4>Import Purchase From Excel</h4>

<hr />

<form asp-action="ImportFromExcel" method="post" enctype="multipart/form-data">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="row">
        <div class="col-lg-12">
            <div class="row">
                <div class="col-lg-3">
                    <label class="control-label">Choose File (XLS or XLSX):</label>
                    <input type="file" name="file" class="form-control" />
                </div>
                <div class="col-lg-9">&nbsp;</div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-lg-12">&nbsp;</div>
    </div>

    <div class="row">
        <div class="col-lg-12">
            <input type="submit" value="Import Execl" id="btn_submit" class="btn btn-lg btn-outline btn-danger" />
            <a asp-action="Index" class="btn btn-lg btn-outline-primary">Back to List</a>
        </div>
    </div>
</form>